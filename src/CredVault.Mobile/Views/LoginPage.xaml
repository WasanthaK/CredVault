<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CredVault.Mobile.ViewModels"
             x:Class="CredVault.Mobile.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             Title="Welcome to CredVault">
    
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            
            <!-- App Logo/Title -->
            <Label Text="ðŸ”" FontSize="60" HorizontalOptions="Center"/>
            <Label Text="CredVault" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>
            <Label Text="Your Digital Identity Wallet" 
                   FontSize="16" 
                   TextColor="{StaticResource Gray600}"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>
            
            <!-- Login Form -->
            <Frame BorderColor="{StaticResource Gray200}" 
                   CornerRadius="8" 
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="15">
                    
                    <Label Text="Username" FontAttributes="Bold"/>
                    <Entry Text="{Binding Username}"
                           Placeholder="Enter your username"
                           AutomationId="UsernameEntry"/>
                    
                    <Label Text="Password" FontAttributes="Bold" Margin="0,10,0,0"/>
                    <Entry Text="{Binding Password}"
                           Placeholder="Enter your password"
                           IsPassword="True"
                           AutomationId="PasswordEntry"/>
                    
                    <!-- Error Message -->
                    <Label Text="{Binding ErrorMessage}"
                           TextColor="{StaticResource Danger}"
                           IsVisible="{Binding HasError}"
                           Margin="0,10,0,0"/>
                    
                    <!-- Login Button -->
                    <Button Text="Login"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="8"
                            Margin="0,20,0,0"
                            HeightRequest="50"
                            AutomationId="LoginButton"/>
                    
                    <!-- Loading Indicator -->
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                      IsVisible="{Binding IsBusy}"
                                      Color="{StaticResource Primary}"
                                      Margin="0,10,0,0"/>
                    
                </VerticalStackLayout>
            </Frame>
            
            <!-- Register Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Don't have an account?" TextColor="{StaticResource Gray600}"/>
                <Label Text="Register"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"
                       TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            
            <!-- OAuth Option (if needed later) -->
            <Label Text="â€” OR â€”" 
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray600}"
                   Margin="0,20,0,10"/>
            
            <Button Text="Login with OAuth2"
                    Command="{Binding LoginWithOAuthCommand}"
                    BackgroundColor="{StaticResource Gray100}"
                    TextColor="{StaticResource Gray900}"
                    BorderColor="{StaticResource Gray300}"
                    BorderWidth="1"
                    CornerRadius="8"
                    HeightRequest="50"
                    AutomationId="OAuthButton"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>

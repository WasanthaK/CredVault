<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredVault.Mobile.Views.ManualRequestPage"
             xmlns:vm="clr-namespace:CredVault.Mobile.ViewModels"
             x:DataType="vm:ManualRequestViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light=#f6f8f7, Dark=#10221b}">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="16" ColumnDefinitions="Auto,*,Auto">
            <Button Grid.Column="0"
                    Text="&#xe5c4;"
                    FontFamily="MaterialSymbolsOutlined"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                    WidthRequest="48"
                    HeightRequest="48"
                    Command="{Binding GoBackCommand}"
                    Margin="-12,0,0,0" />

            <Label Grid.Column="1"
                   Text="Request Information"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                   VerticalOptions="Center" />
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">

                <!-- Description -->
                <Label Text="Select the information you need to verify from the holder."
                       FontSize="16"
                       TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}"
                       Margin="0,0,0,8" />

                <!-- Claims Selection Card -->
                <Frame CornerRadius="12"
                       Padding="0"
                       HasShadow="True"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#1c2d26}">
                    
                    <VerticalStackLayout>
                        <!-- Section Header -->
                        <Label Text="Select Claims"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                               Padding="16,16,16,8" />

                        <!-- Claims List -->
                        <CollectionView ItemsSource="{Binding AvailableClaims}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:RequestClaim">
                                    <Grid Padding="16,12" ColumnDefinitions="Auto,*">
                                        <Grid.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnClaimTapped" />
                                        </Grid.GestureRecognizers>

                                        <CheckBox Grid.Column="0"
                                                  IsChecked="{Binding IsSelected}"
                                                  Color="#0b8458"
                                                  VerticalOptions="Center"
                                                  Margin="0,0,16,0" />

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Name}"
                                                   FontSize="16"
                                                   TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}" />
                                            <Label Text="Required"
                                                   FontSize="12"
                                                   TextColor="#0b8458"
                                                   FontAttributes="Bold"
                                                   IsVisible="{Binding IsRequired}" />
                                        </VerticalStackLayout>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                            </CollectionView.ItemsLayout>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer Button -->
        <Button Grid.Row="2"
                Text="Generate QR Code"
                Command="{Binding GenerateQrCodeCommand}"
                BackgroundColor="#0b8458"
                TextColor="White"
                FontSize="16"
                FontAttributes="Bold"
                CornerRadius="12"
                HeightRequest="56"
                Margin="16,0,16,24" />

        <!-- QR Code Modal Overlay -->
        <Grid Grid.RowSpan="3"
              IsVisible="{Binding ShowQrModal}"
              BackgroundColor="#80000000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseQrModalCommand}" />
            </Grid.GestureRecognizers>

            <Frame CornerRadius="16"
                   Padding="24"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#1e1e1e}"
                   WidthRequest="320"
                   HeightRequest="400"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer />
                </Frame.GestureRecognizers>

                <VerticalStackLayout Spacing="20">
                    <!-- Close Button -->
                    <Button Text="&#xe5cd;"
                            FontFamily="MaterialSymbolsOutlined"
                            FontSize="24"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}"
                            HorizontalOptions="End"
                            WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                            Command="{Binding CloseQrModalCommand}" />

                    <Label Text="Scan this QR Code"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                           HorizontalOptions="Center" />

                    <!-- QR Code Placeholder -->
                    <Frame WidthRequest="200"
                           HeightRequest="200"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="False"
                           BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#2a2a2a}"
                           HorizontalOptions="Center">
                        <Label Text="&#xe439;"
                               FontFamily="MaterialSymbolsOutlined"
                               FontSize="120"
                               TextColor="{AppThemeBinding Light=#cccccc, Dark=#555555}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <Label Text="Present this to the credential holder"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Frame>
        </Grid>

    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CredVault.Mobile.ViewModels"
             x:Class="CredVault.Mobile.Views.CredentialConfirmationPage"
             x:DataType="vm:AddCredentialViewModel"
             Title="Add Credential"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Top App Bar -->
        <Grid Grid.Row="0" Padding="16">
            <Label Text="Add Credential"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
        </Grid>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Row="1" 
                           Spacing="24" 
                           Padding="40"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
            
            <!-- Success Icon -->
            <Border StrokeThickness="0"
                    WidthRequest="96"
                    HeightRequest="96"
                    BackgroundColor="#1A22c55e"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="48"/>
                </Border.StrokeShape>
                <Label Text="&#xE86C;"
                       FontFamily="MaterialSymbols"
                       FontSize="64"
                       TextColor="#22c55e"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <!-- Headline -->
            <Label Text="Credential Added"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>

            <!-- Body Text -->
            <Label HorizontalTextAlignment="Center"
                   FontSize="16"
                   LineHeight="1.5"
                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Your "/>
                        <Span Text="{Binding SelectedCredentialType.DisplayName}"/>
                        <Span Text=" has been added to your wallet."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>

        <!-- Button -->
        <Button Grid.Row="2"
                Text="View in Wallet"
                Command="{Binding NavigateToWalletCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="48"
                Margin="16,16,16,32"
                CornerRadius="12"/>
    </Grid>
</ContentPage>

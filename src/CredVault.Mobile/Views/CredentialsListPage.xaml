<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CredVault.Mobile.ViewModels"
             xmlns:models="clr-namespace:CredVault.Mobile.Models"
             x:Class="CredVault.Mobile.Views.CredentialsListPage"
             x:DataType="viewmodels:CredentialsListViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="0">
        
        <!-- Statistics Header -->
        <Grid Grid.Row="0" 
              Padding="16,12"
              BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1E1E1E}"
              ColumnDefinitions="*,*,*">
            
            <VerticalStackLayout Grid.Column="0" Spacing="4">
                <Label Text="{Binding TotalCredentials}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <Label Text="Total" 
                       FontSize="12" 
                       Opacity="0.7"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" Spacing="4">
                <Label Text="{Binding ActiveCredentials}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#4CAF50"
                       HorizontalOptions="Center"/>
                <Label Text="Active" 
                       FontSize="12" 
                       Opacity="0.7"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" Spacing="4">
                <Label Text="{Binding ExpiredCredentials}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="#F44336"
                       HorizontalOptions="Center"/>
                <Label Text="Expired" 
                       FontSize="12" 
                       Opacity="0.7"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Search and Filter -->
        <Grid Grid.Row="1" 
              Padding="16,8"
              ColumnDefinitions="*,Auto"
              ColumnSpacing="8">
            
            <SearchBar Grid.Column="0"
                       Placeholder="Search credentials..."
                       Text="{Binding SearchText}"
                       SearchCommand="{Binding SearchCredentialsCommand}"
                       VerticalOptions="Center"/>

            <Picker Grid.Column="1"
                    SelectedItem="{Binding SelectedFilter}"
                    WidthRequest="120"
                    VerticalOptions="Center">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>All</x:String>
                        <x:String>Active</x:String>
                        <x:String>Expired</x:String>
                        <x:String>Revoked</x:String>
                        <x:String>Suspended</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </Grid>

        <!-- Credentials List -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCredentialsCommand}">
            
            <CollectionView ItemsSource="{Binding FilteredCredentials}"
                           SelectionMode="None"
                           EmptyView="No credentials found">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CredentialResponseDto">
                        <Frame Margin="16,8"
                               Padding="0"
                               CornerRadius="12"
                               HasShadow="True"
                               BorderColor="Transparent">
                            
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CredentialsListViewModel}}, Path=ViewCredentialDetailsCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>

                            <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                
                                <!-- Header: Type and Status -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Type}"
                                           FontSize="18"
                                           FontAttributes="Bold"/>
                                    
                                    <Frame Grid.Column="1"
                                           Padding="8,4"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           BackgroundColor="{Binding Status, Converter={StaticResource StatusColorConverter}}">
                                        <Label Text="{Binding Status}"
                                               FontSize="12"
                                               TextColor="White"/>
                                    </Frame>
                                </Grid>

                                <!-- Issuer -->
                                <HorizontalStackLayout Grid.Row="1" Spacing="4">
                                    <Label Text="Issued by:"
                                           FontSize="14"
                                           Opacity="0.7"/>
                                    <Label Text="{Binding Issuer}"
                                           FontSize="14"
                                           FontAttributes="Bold"/>
                                </HorizontalStackLayout>

                                <!-- Issue Date -->
                                <HorizontalStackLayout Grid.Row="2" Spacing="4">
                                    <Label Text="Issued:"
                                           FontSize="12"
                                           Opacity="0.6"/>
                                    <Label Text="{Binding IssuedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                           FontSize="12"
                                           Opacity="0.6"/>
                                </HorizontalStackLayout>

                                <!-- Expiration Date -->
                                <HorizontalStackLayout Grid.Row="3" Spacing="4" IsVisible="{Binding ExpiresAt, Converter={StaticResource IsNotNullConverter}}">
                                    <Label Text="Expires:"
                                           FontSize="12"
                                           Opacity="0.6"/>
                                    <Label Text="{Binding ExpiresAt, StringFormat='{0:MMM dd, yyyy}'}"
                                           FontSize="12"
                                           Opacity="0.6"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2"
                          IsRunning="{Binding IsBusy}"
                          IsVisible="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Color="{StaticResource Primary}"/>

        <!-- Error Message -->
        <Frame Grid.Row="2"
               IsVisible="{Binding HasError}"
               BackgroundColor="#FFEBEE"
               Margin="16"
               VerticalOptions="Start">
            <Label Text="{Binding ErrorMessage}"
                   TextColor="#C62828"
                   HorizontalOptions="Center"/>
        </Frame>

        <!-- Floating Action Button -->
        <Button Grid.Row="2"
                Text="+"
                FontSize="32"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="16"
                Command="{Binding AddCredentialCommand}"/>
    </Grid>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CredVault.Mobile.ViewModels"
             x:Class="CredVault.Mobile.Views.SelectCredentialTypePage"
             x:DataType="vm:AddCredentialViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
        
        <!-- Top App Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="16,16,16,8">
            <Button Grid.Column="0"
                    Text="&#xE5C4;"
                    FontFamily="MaterialSymbols"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                    Command="{Binding CancelCommand}"
                    WidthRequest="48"
                    HeightRequest="48"/>
            
            <Label Grid.Column="1"
                   Text="Choose Credential"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
            
            <Button Grid.Column="2"
                    Text="&#xE887;"
                    FontFamily="MaterialSymbols"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                    WidthRequest="48"
                    HeightRequest="48"/>
        </Grid>

        <!-- Page Indicators -->
        <HorizontalStackLayout Grid.Row="1" 
                              HorizontalOptions="Center" 
                              Spacing="12" 
                              Padding="0,16">
            <BoxView WidthRequest="8" 
                     HeightRequest="8" 
                     CornerRadius="4"
                     Color="{StaticResource Primary}"/>
            <BoxView WidthRequest="8" 
                     HeightRequest="8" 
                     CornerRadius="4"
                     Color="{AppThemeBinding Light=#d1d5db, Dark=#374151}"/>
            <BoxView WidthRequest="8" 
                     HeightRequest="8" 
                     CornerRadius="4"
                     Color="{AppThemeBinding Light=#d1d5db, Dark=#374151}"/>
        </HorizontalStackLayout>

        <!-- Filter Chips -->
        <ScrollView Grid.Row="2" Orientation="Horizontal" Padding="16,0" Margin="0,0,0,16">
            <HorizontalStackLayout Spacing="12" BindableLayout.ItemsSource="{Binding CredentialFilters}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border StrokeThickness="0"
                                Padding="16,8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark=#20334b}">
                            <Border.Triggers>
                                <DataTrigger TargetType="Border"
                                           Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=SelectedFilter}"
                                           Value="{Binding .}">
                                    <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=FilterCredentialsCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            <Label Text="{Binding .}"
                                   FontSize="14"
                                   FontAttributes="Bold">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                               Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=SelectedFilter}"
                                               Value="{Binding .}">
                                        <Setter Property="TextColor" Value="{StaticResource White}"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Credential Types Grid -->
        <ScrollView Grid.Row="3" Padding="16,0,16,16">
            <CollectionView ItemsSource="{Binding AvailableCredentialTypes}"
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedCredentialType}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                   Span="2"
                                   HorizontalItemSpacing="12"
                                   VerticalItemSpacing="12"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:CredentialTypeInfo">
                        <Border StrokeThickness="2"
                                Padding="8"
                                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark=Transparent}">
                            <Border.Triggers>
                                <DataTrigger TargetType="Border"
                                           Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=SelectedCredentialType.Type}"
                                           Value="{Binding Type}">
                                    <Setter Property="Stroke" Value="{StaticResource Primary}"/>
                                    <Setter Property="BackgroundColor" Value="#0D004bad"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=SelectCredentialTypeCommand}"
                                                    CommandParameter="{Binding .}"/>
                            </Border.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto">
                                <!-- Image with selection indicator -->
                                <Grid Grid.Row="0" Margin="0,0,0,12">
                                    <Border StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="8"/>
                                        </Border.StrokeShape>
                                        <Image Source="{Binding IssuerLogoUrl}"
                                               Aspect="AspectFill"
                                               HeightRequest="120"/>
                                    </Border>
                                    
                                    <!-- Selection Check Mark -->
                                    <Border StrokeThickness="0"
                                            WidthRequest="24"
                                            HeightRequest="24"
                                            BackgroundColor="{StaticResource Primary}"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            Margin="8"
                                            IsVisible="False">
                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border"
                                                       Binding="{Binding Source={RelativeSource AncestorType={x:Type vm:AddCredentialViewModel}}, Path=SelectedCredentialType.Type}"
                                                       Value="{Binding Type}">
                                                <Setter Property="IsVisible" Value="True"/>
                                            </DataTrigger>
                                        </Border.Triggers>
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="12"/>
                                        </Border.StrokeShape>
                                        <Label Text="&#xE5CA;"
                                               FontFamily="MaterialSymbols"
                                               FontSize="16"
                                               TextColor="{StaticResource White}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                </Grid>

                                <!-- Text Info -->
                                <VerticalStackLayout Grid.Row="1" Spacing="4">
                                    <Label Text="{Binding DisplayName}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                                    <Label Text="{Binding IssuerName}"
                                           FontSize="14"
                                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark=#8da9ce}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <!-- Continue Button -->
        <Button Grid.Row="4"
                Text="Continue"
                Command="{Binding ProceedToAuthenticationCommand}"
        IsEnabled="{Binding CanProceed}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="48"
                Margin="16"
                CornerRadius="12"/>
    </Grid>
</ContentPage>

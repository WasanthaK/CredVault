<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CredVault.Mobile.ViewModels"
             x:Class="CredVault.Mobile.Views.AuthenticateCredentialPage"
             x:DataType="vm:AddCredentialViewModel"
             Title="GovStack Wallet"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Top App Bar -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Padding="16">
            <Button Grid.Column="0"
                    Text="&#xE5C4;"
                    FontFamily="MaterialSymbols"
                    FontSize="24"
                    BackgroundColor="Transparent"
                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                    Command="{Binding CancelCommand}"
                    WidthRequest="48"
                    HeightRequest="48"/>
            
            <Label Grid.Column="1"
                   Text="GovStack Wallet"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
            
            <BoxView Grid.Column="2" WidthRequest="48"/>
        </Grid>

        <!-- Main Content -->
        <VerticalStackLayout Grid.Row="1" 
                           Spacing="24" 
                           Padding="16"
                           VerticalOptions="Center">
            
            <!-- Icon -->
            <Border StrokeThickness="0"
                    WidthRequest="80"
                    HeightRequest="80"
                    BackgroundColor="#1A004bad"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="40"/>
                </Border.StrokeShape>
                <Label Text="&#xE8EE;"
                       FontFamily="MaterialSymbols"
                       FontSize="40"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <!-- Headline -->
            <Label FontSize="32"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   LineHeight="1.2"
                   TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Redirecting to "/>
                        <Span Text="{Binding IssuerName}"/>
                        <Span Text="..."/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <!-- Body Text -->
            <Label Text="You will be securely logged in via your national identity provider to verify your identity."
                   FontSize="16"
                   HorizontalTextAlignment="Center"
                   LineHeight="1.5"
                   TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}"/>

            <!-- Progress Section -->
            <VerticalStackLayout Spacing="12" Margin="0,24,0,0">
                <Grid ColumnDefinitions="*,Auto">
                    <Label Grid.Column="0"
                           Text="Secure connection"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"/>
                    <Label Grid.Column="1"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding AuthenticationProgress}"/>
                                <Span Text="%"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>
                
                <Border StrokeThickness="0"
                        HeightRequest="8"
                        BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark=#2e486b}">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="4"/>
                    </Border.StrokeShape>
                    <ProgressBar Progress="{Binding AuthenticationProgress, Converter={StaticResource PercentToDecimalConverter}}"
                                 ProgressColor="{StaticResource Primary}"/>
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2" Spacing="16" Padding="16" Margin="0,0,0,24">
            <!-- Button -->
            <Button Text="Proceed to Secure Login"
                    Command="{Binding ProceedToConsentReviewCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="48"
                    CornerRadius="12"
                    IsEnabled="{Binding IsAuthenticating, Converter={StaticResource InvertedBoolConverter}}"/>

            <!-- Info Text -->
            <Label Text="Using OAuth 2.0 / OpenID4VCI for a secure connection"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>

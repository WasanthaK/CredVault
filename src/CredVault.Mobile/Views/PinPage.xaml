<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredVault.Mobile.Views.PinPage"
             xmlns:vm="clr-namespace:CredVault.Mobile.ViewModels"
             x:DataType="vm:PinViewModel"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#121212}">

    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Grid Grid.Row="0" Padding="16" ColumnDefinitions="Auto,*">
            <Button Grid.Column="0"
                    Text="Cancel"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#004aad"
                    FontSize="16"
                    HorizontalOptions="Start" />
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="24" Spacing="32" VerticalOptions="Center">

                <!-- Title and Instruction -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Title}"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#ffffff}"
                           HorizontalOptions="Center" />
                    
                    <Label Text="{Binding Instruction}"
                           FontSize="16"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

                <!-- PIN Dots Display -->
                <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                    <Frame WidthRequest="16"
                           HeightRequest="16"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <Frame.BackgroundColor>
                            <MultiBinding Converter="{StaticResource PinDotColorConverter}">
                                <Binding Path="PinLength" />
                                <Binding Path="ConfirmPinLength" />
                                <Binding Path="IsConfirmStep" />
                                <Binding Source="0" />
                            </MultiBinding>
                        </Frame.BackgroundColor>
                    </Frame>

                    <Frame WidthRequest="16"
                           HeightRequest="16"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <Frame.BackgroundColor>
                            <MultiBinding Converter="{StaticResource PinDotColorConverter}">
                                <Binding Path="PinLength" />
                                <Binding Path="ConfirmPinLength" />
                                <Binding Path="IsConfirmStep" />
                                <Binding Source="1" />
                            </MultiBinding>
                        </Frame.BackgroundColor>
                    </Frame>

                    <Frame WidthRequest="16"
                           HeightRequest="16"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <Frame.BackgroundColor>
                            <MultiBinding Converter="{StaticResource PinDotColorConverter}">
                                <Binding Path="PinLength" />
                                <Binding Path="ConfirmPinLength" />
                                <Binding Path="IsConfirmStep" />
                                <Binding Source="2" />
                            </MultiBinding>
                        </Frame.BackgroundColor>
                    </Frame>

                    <Frame WidthRequest="16"
                           HeightRequest="16"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False">
                        <Frame.BackgroundColor>
                            <MultiBinding Converter="{StaticResource PinDotColorConverter}">
                                <Binding Path="PinLength" />
                                <Binding Path="ConfirmPinLength" />
                                <Binding Path="IsConfirmStep" />
                                <Binding Source="3" />
                            </MultiBinding>
                        </Frame.BackgroundColor>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Error Message -->
                <Label Text="{Binding ErrorMessage}"
                       FontSize="14"
                       TextColor="#D32F2F"
                       IsVisible="{Binding HasError}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <!-- Number Pad -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                      ColumnDefinitions="*,*,*"
                      RowSpacing="12"
                      ColumnSpacing="12"
                      MaximumWidthRequest="300"
                      HorizontalOptions="Center">

                    <!-- Row 1 -->
                    <Button Grid.Row="0" Grid.Column="0"
                            Text="1"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="1"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="0" Grid.Column="1"
                            Text="2"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="2"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="0" Grid.Column="2"
                            Text="3"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="3"
                            Style="{StaticResource PinButton}" />

                    <!-- Row 2 -->
                    <Button Grid.Row="1" Grid.Column="0"
                            Text="4"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="4"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="1" Grid.Column="1"
                            Text="5"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="5"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="1" Grid.Column="2"
                            Text="6"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="6"
                            Style="{StaticResource PinButton}" />

                    <!-- Row 3 -->
                    <Button Grid.Row="2" Grid.Column="0"
                            Text="7"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="7"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="2" Grid.Column="1"
                            Text="8"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="8"
                            Style="{StaticResource PinButton}" />
                    <Button Grid.Row="2" Grid.Column="2"
                            Text="9"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="9"
                            Style="{StaticResource PinButton}" />

                    <!-- Row 4 -->
                    <Button Grid.Row="3" Grid.Column="0"
                            Text="&#xe31b;"
                            FontFamily="MaterialSymbolsOutlined"
                            Command="{Binding UseBiometricCommand}"
                            IsVisible="{Binding IsSetupMode, Converter={StaticResource InvertedBoolConverter}}"
                            Style="{StaticResource PinButton}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}" />
                    
                    <Button Grid.Row="3" Grid.Column="1"
                            Text="0"
                            Command="{Binding AddDigitCommand}"
                            CommandParameter="0"
                            Style="{StaticResource PinButton}" />
                    
                    <Button Grid.Row="3" Grid.Column="2"
                            Text="&#xe14a;"
                            FontFamily="MaterialSymbolsOutlined"
                            Command="{Binding DeleteDigitCommand}"
                            Style="{StaticResource PinButton}"
                            BackgroundColor="Transparent"
                            TextColor="{AppThemeBinding Light=#666666, Dark=#aaaaaa}" />
                </Grid>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>

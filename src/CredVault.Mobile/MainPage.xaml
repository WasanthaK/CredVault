<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CredVault.Mobile.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="DashboardBtn"
                Text="🏠 Dashboard (New Design)" 
                Clicked="OnDashboardClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#004bad"
                TextColor="White"
                FontAttributes="Bold"
                Margin="0,10,0,0" />

            <Button
                x:Name="TestBtn"
                Text="🧪 TEST PAGE (Simple Navigation)" 
                Clicked="OnTestClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#ef4444"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="CredentialsBtn"
                Text="View Credentials" 
                Clicked="OnCredentialsClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#6b7280"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="AddCredentialBtn"
                Text="Add Credential" 
                Clicked="OnAddCredentialClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#22c55e"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="ScanQrBtn"
                Text="Scan QR Code" 
                Clicked="OnScanQrClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#8b5cf6"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="ProfileBtn"
                Text="My Profile" 
                Clicked="OnProfileClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#f59e0b"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="BackupBtn"
                Text="Backup &amp; Restore" 
                Clicked="OnBackupClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#10b981"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="ActivityBtn"
                Text="Activity Log" 
                Clicked="OnActivityClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#06b6d4"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="SettingsBtn"
                Text="Settings" 
                Clicked="OnSettingsClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#6366f1"
                TextColor="White"
                Margin="0,10,0,0" />

            <Button
                x:Name="VerifierBtn"
                Text="Verifier Mode" 
                Clicked="OnVerifierClicked"
                HorizontalOptions="Fill"
                BackgroundColor="#0b8458"
                TextColor="White"
                Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
